@model CarStore.Models.Cars.CreateCarModel

@{
    ViewBag.Title = "Add Car For Sale";
}

@using (Html.BeginForm("Create", "Cars", FormMethod.Post))
{
    @Html.EditorForModel()    

    <div>
        @Html.LabelFor(m => m.EngineType)
    </div>

    <div>
        @Html.EnumDropDownListFor(m => m.EngineType)
    </div>

    <br />
    <div>
        @Html.LabelFor(m=>m.AdditionalInformation)
    </div>
    <div>
        @Html.TextAreaFor(m => m.AdditionalInformation)
    </div>

    <br />
    <div>
        <input type="submit" value="Add car" />
    </div>
}