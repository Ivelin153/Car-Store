@model IEnumerable<CarStore.Models.Cars.HomeIndexCarModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Chivas Auto</h1>
    <p class="lead text-center"">Welcome to the best car store in Bulgaria for 2017!</p>
    <p class="text-center"><a href="@Url.Action("About", "Home")" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4">
            <h2>@car.Make @car.Model (@car.Year)</h2>          
            <br />             
            <p>
            <a class="btn btn-default" href="/Cars/Details/@car.Id">
                <img src="@car.ImageUrl" class="img-responsive" />
                See more &raquo;
                </a></p>
        </div>
    }
</div>


